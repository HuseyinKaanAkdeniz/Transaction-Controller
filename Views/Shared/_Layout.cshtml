<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gelir Gider İzleyicisi</title>
    <link href="https://cdn.syncfusion.com/ej2/27.2.2/bootstrap5-dark.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/27.2.2/material.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gelir_Gider_İzleyicisi.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/27.2.2/dist/ej2.min.js"></script>
</head>
<body class="e-bigger">

    <partial name="_Sidebar.cshtml"/>

    <div class="dock-target">

        <nav class="navbar sticky-top">
            <div class="container-fluid py-2 px-4">
                <i class="fa-solid fa-magnifying-glass"></i>
                <div>
                    <i class="fa-solid fa-bell"></i>
                    <i class="fa-solid fa-message"></i>
                </div>
            </div>
        </nav>
        
    <div class="main-content">
    <div class="container mt-6">
        <div class="row justify-content-center">
                <div class="@(ViewData["isDashboard"] == null ? "col-md-10" : "col-md-12")">
                <main role="main" class="pb-3">
                        @if (ViewData["isDashboard"] == null) 
                        {
                        <div class="row">
                        <div class="col-md-7">
                           <ejs-breadcrumb id="breadcrumb"
                           separatorTemplate="@Html.Raw("<span class='fa-solid fa-angle-right'></span>")"></ejs-breadcrumb>
                            <div class="d-flex flex-column mb-5 mt-2 ms-3">
                                <div class="d-flex mb-1">
                                    <div class="flex-grown-1">
                                        <h3 class="fw-bold">@ViewData["Page Title"]</h3>
                                    </div>
                                    <div class="ms-3">
                                        @if (ViewData["PageActionText"] != null)
                                        {
                                            <a class="btn btn-success " href="@ViewData["PageActionUrl"]">
                                                @ViewData["PageActionText"]
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
